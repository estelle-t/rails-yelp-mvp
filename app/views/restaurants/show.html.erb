

<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>

  <h2>Reviews</h2>
  <ul class="list-group mb-3">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <strong><%= review.rating %> ‚≠ê</strong> - <%= review.content %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
</div>
